<% if capsule.id %>

	<li>
		<%= link_to capsule.name, course_capsule_path(capsule.course, capsule), class: (@capsule == capsule) ? 'active' : '' %>
	</li>

	<% if @capsule == capsule %>

		<% if @capsule.lectures.empty? %>

			<li class="grey">No capsules found!</li>

		<% else %>

			<ul>
				<%= render @capsule.lectures %>
			</ul>

		<% end %>

	<% end %>

<% end %>
