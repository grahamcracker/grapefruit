<% page_title (@capsule.name + ' :: ' + @course.name) %>

<h3><%= @capsule.name %></h3>

<% unless @capsule.description.blank? %>
  <p class="description"><%= @capsule.description %></p>
<% end %>

<%= link_to_textbook_problem_sets(@course) %>

<% if @problem_sets.present? %>
  <table class="listing">
    <thead>
      <th>
        Problem Sets
      </th>
    </thead>
    <%= render collection: @problem_sets, partial: "problem_sets/table_problem_set", as: :problem_set %>
  </table>
<% end %>

<%= render "documents/documents", container: @capsule %>

<% if @documents.empty? && @problem_sets.empty? && @capsule.description.blank? %>
  <p class="grey">Looks like there's no content in this capsule yet!</p>
  <p class="grey">Try clicking on a lecture instead.</p>
<% end %>
