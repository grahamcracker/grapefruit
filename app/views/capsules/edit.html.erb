<% page_title "Editing #{@capsule.name}" %>

<%= breadcrumbs([
      link_to('All Courses', courses_path),
      link_to(@course.name, course_path(@course)),
      link_to("Edit #{@capsule.name} from #{@course.name}", void, class: "current")
    ]) %>

<div class="landing">

  <div class="description">
    <h2>Edit <%= @capsule.name %> from <%= @course.name %></h2>
  </div>

  <div class="login">
    <%= form_for [@course, @capsule] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, placeholder: "Capsule Name", autofocus: true %>

      <%= f.text_area :description, style: "height: 20em", placeholder: "This topic consists of ..." %>

      <div><%= f.submit "Update Capsule", class: "button small" %></div>
    <% end %>
  </div>

</div>
