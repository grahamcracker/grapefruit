<% page_title "Creating New Lecture" %>

<%= breadcrumbs([
      link_to("All Courses", courses_path),
      link_to(@course.name, course_path(@course)),
      link_to(@capsule.name, [@course, @capsule]),
      link_to('Add Lecture', void, class: "current")
    ])
%>

<div class="landing">

  <div class="description">
    <h3>Add Lecture to <%= @capsule.name %></h3>
  </div>

  <div class="login">
    <%= form_for [@course, @capsule, @lecture] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, placeholder: "Name", autofocus: true %>

      <%= f.text_area :description, placeholder: "This lecture will focus on ..." %>

      <div><%= f.submit "Add Lecture", class: "button small" %></div>
    <% end %>
  </div>

</div>
