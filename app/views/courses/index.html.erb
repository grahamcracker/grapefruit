<div class="page-header-container">
  <div class="page-header">
    <div class="page-header-left">
      <h2 class="title">Courses</h2>
      <!-- if @course.description.empty? -->
        <p class="description">See all course offerings at <%= Settings.org.name %> </p>
      <!-- endif -->
    </div>
    <div class="page-header-right">
      <ul class="course-actions">
        <% if can? :create, Course %>
          <li><%= link_to 'Create New Course', new_course_path, class: 'button small' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<section>
  <div class="page-header">
    <h3 class="page-header-title">Enrolled</h3>
  <% if @enrolled_courses.empty? %>
    <h5 class="light">You are not enrolled in any courses.</h5>
  </div>
  <% else %>
  </div>
    <%= render @enrolled_courses %>
  <% end %>
  <hr>
</section>

<% unless @instructed_courses.blank? %>
  <section>
    <div class="page-header">
      <h3 class="page-header-title">Courses You Instruct</h3>
    </div>
      <%= render @instructed_courses %>
    <hr>
  </section>
<% end %>

<section>
  <div class="page-header">
    <h3 class="page-header-title">Courses Offered</h3>
  <% if @courses.empty? %>
      <h5 class="light">There are no courses listed.</h5>
    </div>
  <% else %>
    </div>
    <%= render @courses %>
  <% end %>

</section>
