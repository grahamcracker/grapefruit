<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name %>
<%= f.text_field :name, autofocus: true %>

<%= f.label :description %>
<%= f.text_area :description, rows: 15, style: "height:auto;" %>

<%= f.label :subject %>
<%= f.text_field :subject %>

<%= f.label :course_number, "Course Number" %>
<%= f.text_field :course_number %>

<%= f.label :course_registration_number, "Course Registration Number (CRN)" %>
<%= f.text_field :course_registration_number %>

<%= f.label :semester %>
<%= f.text_field :semester %>

<%= f.label :year %>
<%= f.text_field :year %>

<%= f.label :spots_available, "Spot Available" %>
<%= f.text_field :spots_available %>

<%= f.label :credits %>
<%= f.text_field :credits %>

<%= f.label :webwork_url, "WeBWork URL (for example: http://webwork2.cs.rpi.edu/webwork2/myTestCourse/, optional)" %>
<%= f.text_field :webwork_url %>

<%= f.label :problem_set_url, "Problem Set URL" %>
<%= f.text_field :problem_set_url, placeholder: "http://www.pearsonmylabandmastering.com/northamerica/" %>

<%= f.submit "#{submit_text(@course)} Course", class: "button small" %>

<% if @course.persisted? %>
  <%= link_to "Destroy Course", "#", class: "button alert small" %>
<% end %>
