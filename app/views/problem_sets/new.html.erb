<%= breadcrumbs([
      link_to("All Courses", courses_path),
      link_to(@course.name, course_path(@course)),
      link_to(@capsule.name, [@course, @capsule]),
      link_to('Add Problem Set', void, class: "current")
    ])
%>

<div class="landing">

  <div class="description">
    <h3>Add Problem Set to <%= @capsule.name %></h3>
  </div>

  <div class="login">
    <%= form_for [@course, @capsule, @problem_set] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, placeholder: "Name", autofocus: true %>

      <div><%= f.submit "Add Problem Set", class: "button small" %></div>
    <% end %>
  </div>

</div>
