<div class="submission">

  <span class="number">
    #<%= submission.id %>.<%= truncate(Digest::MD5.hexdigest(submission.inspect), length: 5, omission: "") %>
  </span>

  <span class="timeago">
    submitted <%= time_ago_in_words(submission.created_at) %> ago
  </span>

  (<%= link_to 'delete',
    course_assignment_submission_path(submission.assignment.course, submission.assignment, submission),
    method: :delete,
    confirm: "Warning - this CANNOT be undone. Are you sure you want to delete this submission?" %>)

  <p>
    <%= submission.comments %>
  </p>

  <%= render 'documents/documents', container: submission, documents: submission.documents%>

</div>
