<div class="page-header-container">
  <div class="page-header">
    <div class="page-header-full">
      <h2 class="title">Welcome <%= current_user.display_identifier %>!</h2>
    </div>
  </div>
</div>

<% unless @instructor_courses.empty? %>
  <section>
    <div class="page-header-full">
      <h3>Courses You Instruct</h3>
    </div>
    <%= render @instructor_courses %>
  </section>
<% end %>

<% unless @assistant_courses.empty? %>
  <section>
    <div class="page-header-full">
      <h3>Courses You Assist With</h3>
    </div>
    <%= render @assistant_courses %>
  </section>
<% end %>

<section>
  <div class="page-header-full">
    <h3 class="page-header-title">Courses You're Taking</h3>

  <% if @student_courses.empty? %>
    <h5 class="light">You are not enrolled in any courses.</h5>
    </div>
  <% else %>
    </div>
    <%= render @student_courses %>
  <% end %>

</section>
<br/>
