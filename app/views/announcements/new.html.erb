<% page_title "Creating New Announcement" %>

<div class="landing">

  <%= link_to '&larr; cancel to announcements'.html_safe, course_announcements_path(@course), class: 'button secondary small' %>

  <div class="description">
    <h3>Add Announcement to <%= @course.name %></h3>
  </div>

  <div class="login">
    <%= form_for [@course, @announcement] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :title, placeholder: "Homework due tommorrow!", autofocus: true %>

      <%= f.text_area :content, rows: 4, style: "height:auto;", placeholder: "Pages 47-48 problems are due tomorrow, make sure to turn them in!" %>

      <%= render 'global/send_email', checked: true %>

      <div><%= f.submit "Create Announcement", class: "button small" %></div>
    <% end %>
  </div>

</div>
