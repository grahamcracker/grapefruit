@import "application";

.top-bar-container {
    background-color: #fff;
    position: relative;
  .nav-area {
    a.active{
      background-color: $topbar-bg-color;
      color: #fff;
    }
  }
}

.page-header-container {
    background-image: url(<%= asset_path 'happykids.jpeg' %>);
    background-position: 0% 45%;
    background-size: 100%;
    padding: 4rem 0 10rem;
    margin-bottom: 0;
}

.page-header {
    text-align: center;
    h1 {
        font-size: 3.5rem;
        font-weight: normal !important;
        text-shadow: 1px 1px 3px #222;
    }
}

div.main-content{
    /* hide background on small viewports */
    @media #{$small} {
      background:none;
    }
    @media #{$medium} {
      background:none;
    }

    div.logo{
        @include grid-column(12);
        margin-bottom: 2em;
    }

    div.content{
        hr{
          border-color: #aaa;
        }
    }
    div.about.content, div.contact.content,div.contribute.content{
      padding: 1em 15%;
    }
    div.about-for.content h3{
      text-align: left;
    }
    div.changelog.content h6{
      span{
        margin-left: 1em;
        @extend .grey;
      }
    }
    div.landing{
      text-align: center;
      p.description{
        color: $grey-text-color;
      }
      a.login{
        margin-right: 1em;
      }
    }

    .header-container {
      background-image: url(<%= asset_path 'orchard.jpeg' %>);
      background-position: 0% 50%;
      background-size: 100%;
    }

    form.login-form{
        input[type="submit"]{
            margin-bottom: .8em;
            width: 100%;
            border-radius: 4px;
        }
        fieldset{
          border: none;
        }
    }

    div.call-to-action {
      h1 {
        color: white;
      }
    }

    div.login-form-container {
      color: white;

      h4 {
        color: white;
      }
    }

    div.register{
        @include grid-column(3, $center: true);
    }
}

.register-form-container {
    @extend .login-form-container;
    margin-top: 0 !important;
    border: none;
}
